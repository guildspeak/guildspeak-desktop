{
  "compilerOptions": {
    "outDir": "./build/",
    "module": "es2015",
    "target": "es2017",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "esnext"],
    "experimentalDecorators": true,
    "baseUrl": "./"
  },
  "awesomeTypescriptLoaderOptions": {
    "reportFiles": ["src/**/*.{ts,tsx}"],
    "useCache": true
  },
  "exclude": ["node_modules", "dist", "build"],
  "include": ["src/**/*"]
}
